{
	"info": {
		"_postman_id": "acbe226a-8d0f-4742-917d-f988f34de6c8",
		"name": "CategoriaResourceTest",
		"description": "Categoria Resource Test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Crear una nueva categoría",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "794b4324-7c9d-4478-a9f3-998ec53e214c",
						"exec": [
							"var data = JSON.parse(responseBody);",
							"postman.setGlobalVariable(\"new_name_c\", data.nombre);",
							"tests[\"No genera error en el Post\"] = responseCode.code === 200;"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"nombre\" : \"Urbana\"\n}"
				},
				"url": {
					"raw": "http://{{ip}}:{{puerto}}/s2_bicicletas-api/api/categorias",
					"protocol": "http",
					"host": [
						"{{ip}}"
					],
					"port": "{{puerto}}",
					"path": [
						"s2_bicicletas-api",
						"api",
						"categorias"
					]
				}
			},
			"response": []
		},
		{
			"name": "Crear categoría con nombre existente",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "478930a4-27ed-4ee2-a91e-5a55c1a43b01",
						"exec": [
							"tests[\"No crea con el mismo nombre\"] = responseCode.code === 412;",
							"tests[\"Mensaje correcto de error\"] = responseBody.has(\"Ya existe una categoría con el nombre\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"nombre\": \"Urbana\"\n}"
				},
				"url": {
					"raw": "http://{{ip}}:{{puerto}}/s2_bicicletas-api/api/categorias",
					"protocol": "http",
					"host": [
						"{{ip}}"
					],
					"port": "{{puerto}}",
					"path": [
						"s2_bicicletas-api",
						"api",
						"categorias"
					]
				}
			},
			"response": []
		},
		{
			"name": "Eliminar una categoría",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "7266a827-c275-4e16-b2e4-702f322ddbef",
						"exec": [
							"tests[\"No genera error en el Delete\"] = responseCode.code === 204;"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "http://{{ip}}:{{puerto}}/s2_bicicletas-api/api/categorias/{{new_name_c}}",
					"protocol": "http",
					"host": [
						"{{ip}}"
					],
					"port": "{{puerto}}",
					"path": [
						"s2_bicicletas-api",
						"api",
						"categorias",
						"{{new_name_c}}"
					]
				}
			},
			"response": []
		}
	]
